definition {
	macro changePagination {
		Click(locator1 = "Pagination#ITEMS_PER_PAGE_SELECT");

		var key_itemsPerPage = "${itemsPerPage}";

		AssertClick(
			locator1 = "MenuItem#ANY_MENU_ITEM",
			value1 = "${itemsPerPage}",
			key_menuItem = "${itemsPerPage}"
		);

		AssertTextEquals(
			locator1 = "Pagination#ITEMS_PER_PAGE_SELECT",
			value1 = "${itemsPerPage} Entries"
		);
	}

	macro clickNextPage {
		Click(locator1 = "Pagination#NEXT_LINK");
	}

	macro viewResults {
		AssertTextEquals(locator1 = "Pagination#RESULTS", value1 = "${results}");
	}
}